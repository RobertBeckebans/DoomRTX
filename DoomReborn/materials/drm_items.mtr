//==================
// The Vial model
//==================

models/drm_items/vial/vialglass

{
	noShadows
	noselfShadow
	translucent
	twosided
	glass
	//forceoverlays

   diffusemap	        models/drm_items/vial/glass_d.tga
   specularmap          models/drm_items/vial/glass_s.tga
   bumpmap		models/drm_items/vial/glass_local.tga
}

models/drm_items/vial/vialstopper

{
	noShadows
	noselfShadow

   diffusemap	        models/drm_items/vial/stopper.tga
}

models/drm_items/vial/vialpotion

{
	noShadows
	noselfShadow
	translucent

	{       
      	 blend	add
	 map	models/drm_items/vial/potion_d.tga
		rgb		fadeTable[time] + 5 * 0.01
	}

    diffusemap	        models/drm_items/vial/potion_d.tga
}

models/drm_items/vial/orb
{
 qer_editorimage models/drm_items/vial/vialorb_fx.tga
 noSelfShadow
 noShadows
 twosided
 deform sprite

 	{
 	blend add
 	map models/drm_items/vial/vialorb_fx.tga
	rgb		fadeTable[time] + 3 * 0.01
  	}
}

