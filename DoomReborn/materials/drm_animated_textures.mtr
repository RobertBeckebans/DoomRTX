// Nukage

textures/drm_textures/animated/nukage/nukage1_d.tga
{ 
   qer_editorimage textures/drm_textures/animated/nukage/nukage1_ed.tga
  
   { 
      if ( ( time * 5 ) % 3 == 0 ) 
      blend    diffusemap 
      map   textures/drm_textures/animated/nukage/nukage1_d.tga
   } 
   { 
      if ( ( time * 5 ) % 3 == 1 ) 
      blend    diffusemap 
      map   textures/drm_textures/animated/nukage/nukage2_d.tga
   } 
   { 
      if ( ( time * 5 ) % 3 == 2 ) 
      blend    diffusemap 
      map   textures/drm_textures/animated/nukage/nukage3_d.tga
   } 
}

